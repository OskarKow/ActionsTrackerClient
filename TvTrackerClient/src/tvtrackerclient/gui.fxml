<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import tvtrackerclient.*?>
<?import java.lang.String?>
<?import javafx.scene.control.TextField?>

<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/2.2" fx:controller="tvtrackerclient.GuiController">
    <TextField GridPane.rowIndex = "0" GridPane.columnIndex = "0" text="Enter Search Phrase"/>
    <ChoiceBox GridPane.rowIndex = "0" GridPane.columnIndex = "1" fx:id = "searchOption" value = "Program">
        <items>
            <FXCollections fx:factory = "observableArrayList">
                <String fx:value = "Program"/>
                <String fx:value = "Channel"/>
            </FXCollections>
        </items>
    </ChoiceBox>
    <Button GridPane.rowIndex = "0" GridPane.columnIndex = "2" text="Search" />
    <!--There has to be 2 tables - one for searching by Program and one for Channel -->
    <TableView fx:id = "programSearchTable" GridPane.rowIndex = "1" GridPane.columnIndex = "0" prefWidth="400" visible = "false">
        <columns>
            <TableColumn fx:id = "channelNameColumn" prefWidth = "200" text = "Channel"/>
            <TableColumn fx:id = "channelTimeColumn" prefWidth = "200" text = "Time"/>
        </columns>
    </TableView>
    
    <TableView fx:id = "channelSearchTable" GridPane.rowIndex = "1" GridPane.columnIndex = "0" prefWidth="400" visible = "false">
        <columns>
            <TableColumn fx:id = "programNameColumn" prefWidth = "200" text = "Program"/>
            <TableColumn fx:id = "programTimeColumn" prefWidth = "200" text = "Time"/>
        </columns>
    </TableView>
</GridPane>